
div.profile
	img(src="{{detalleCtrl.infoCandidato.foto}}")
	h1 {{::detalleCtrl.infoCandidato.nombre}}
	h5 {{::detalleCtrl.infoCandidato.partido}}
	div.val
		div.icon
			img(src="./assets/images/happy.png").icon-happy.icon-xs
		span.hr
		div.icon
			img(src="./assets/images/neutro.png").icon-noun.icon-m
		span.hr
		div.icon
			img(src="./assets/images/angry.png").icon-angry.icon-xl
	div.votes
		div.vote.happy
			span {{::detalleCtrl.infoCandidato.positivos}}
		span.hr
		div.vote.noun
			span {{::detalleCtrl.infoCandidato.neutrales}}
		span.hr
		div.vote.angry
			span {{::detalleCtrl.infoCandidato.negativos}}
	button.match Versus
